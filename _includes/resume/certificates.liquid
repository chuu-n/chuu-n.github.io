<div class="list-group">
  {% assign certificates = data[1] | sort: 'date' | reverse %}
  {% for content in certificates %}
    <div class="row mb-2">
      <!-- Date and Icon -->
      <div class="col-xs-2 col-sm-2 col-md-2 text-center date-column">
        {% assign date = content.date | split: '-' | join: '.' %}
        <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
          {{ date }}
        </span>
        {% if content.icon %}
          <div class="list-group-category-icon mt-1">
            <i class="{{ content.icon }}"></i>
          </div>
        {% endif %}
      </div>

      <!-- Certificate Info -->
      <div class="col-xs-10 col-sm-10 col-md-10">
        <h6 class="mb-1">
          <a href="{{ content.url | default: '#' }}" target="_blank" rel="noopener noreferrer">
            {{ content.name }}
          </a>
        </h6>
        <p class="mb-0 text-muted"><strong>{{ content.issuer }}</strong></p>
        {% if content.date %}
          <p class="mb-0 text-muted">{{ content.date }}</p>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>
