<div class="list-group">
  {% assign certificates = data[1] | sort: 'date' | reverse %}
  {% for content in certificates %}
    <div class="row mb-2">
      <!-- Date and Icon -->
      <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
        {% assign date = content.date | split: '-' | join: '.' %}
         <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> {{ date }} </span>
        {% if content.icon %}
          <div class="list-group-category-icon mt-1">
            <i class="{{ content.icon }}"></i>
          </div>
        {% endif %}
      </div>
      <!-- Certificate Info -->
      <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ content.url }}">{{ content.name }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.issuer }}</h6>
      </div>
    </div>
  {% endfor %}
</div>
